<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/cartimg"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:src="@drawable/cartimg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/productname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/cartimg"
        app:layout_constraintTop_toTopOf="@+id/cartimg"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"
        android:layout_marginEnd="@dimen/_30sdp"
        android:padding="@dimen/_5sdp"
        android:text="Product name"/>
    <TextView
        android:id="@+id/gram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/productname"
        app:layout_constraintStart_toEndOf="@id/cartimg"
        android:layout_marginStart="@dimen/_10sdp"
        android:textSize="@dimen/_8sdp"
        android:text="50g"
        android:textColor="@color/grey_Dark_color"/>
    <TextView
        android:id="@+id/Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/gram"
        app:layout_constraintStart_toEndOf="@+id/cartimg"
        android:text="Rs.50"/>
<ImageButton
    android:id="@+id/plusbutton"
    android:layout_width="@dimen/_50sdp"
    android:layout_height="@dimen/_50sdp"
    app:layout_constraintTop_toTopOf="@id/cartimg"
    app:layout_constraintBottom_toBottomOf="@id/cartimg"
    android:background="@color/white"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/productname"
    android:src="@drawable/ic_baseline_add_circle_outline_24" />
    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/cartimg"
        app:layout_constraintBottom_toBottomOf="@id/cartimg"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/plusbutton"/>


    <ImageButton
        android:id="@+id/minusbutton"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintTop_toTopOf="@id/cartimg"
        app:layout_constraintBottom_toBottomOf="@id/cartimg"
        android:background="@color/white"
        app:layout_constraintStart_toEndOf="@id/count"
        android:src="@drawable/ic_baseline_remove_circle_outline_24"/>

</androidx.constraintlayout.widget.ConstraintLayout>